# Modified from
# https://gist.github.com/rafi/6063132
# https://github.com/oberon-manjaro/i3status-manjaro/blob/master/i3status.conf

general {
  colors         = true
  color_good     = "#BBBBBB"
  color_bad      = "#CC1616"
  color_degraded = "#55858E"
  interval       = 8
}

order += "volume master"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

volume master {
  format       = " vol %volume "
  format_muted = " vol muted "
  device       = "default"
  mixer        = "Master"
  mixer_idx    = 0
}

load {
  format = " load %1min "
}

cpu_usage {
  format = " cpu %usage "
}

disk "/" {
  format = " hdd %avail "
}

ethernet _first_ {
  format_up   = " lan %ip "
  format_down = " no lan "
}

wireless _first_ {
  format_up   = " wlan %essid "
  format_down = " no wlan "
}

battery all {
  format                   = " %status %percentage "
  format_down              = " no battery "
  last_full_capacity       = true
  integer_battery_capacity = true
  status_chr               = ""
  status_bat               = "⚡"
  status_unk               = "?"
  status_full              = ""
  low_threshold            = 15
  threshold_type           = time
}

tztime local {
  format = " %h-%d %H:%M "
}

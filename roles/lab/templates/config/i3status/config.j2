# Modified from
# https://gist.github.com/rafi/6063132
# https://github.com/oberon-manjaro/i3status-manjaro/blob/master/i3status.conf

general {
  colors         = true
  color_good     = "#BBBBBB"
  color_bad      = "#CC1616"
  color_degraded = "#55858E"
  interval       = 8
}

{% if dmi_product_name is search('MacBook') %}
order += "volume master"
{% endif %}

order += "load"
order += "cpu_usage"
order += "disk /"

{% if dmi_product_name is search('MacBook') %}
order += "wireless _first_"
order += "battery all"
{% else %}
order += "ethernet _first_"
{% endif %}

order += "tztime local"

{% if dmi_product_name is search('MacBook') %}
volume master {
  format       = " vol %volume "
  format_muted = " vol muted "
  device       = "default"
  mixer        = "Master"
  mixer_idx    = 0
}
{% endif %}

load {
  format = " load %1min "
}

cpu_usage {
  format = " cpu %usage "
}

disk "/" {
  format = " hdd %avail "
}

{% if dmi_product_name is search('MacBook') %}
wireless _first_ {
  format_up   = " wlan %essid "
  format_down = " no wlan "
}

battery all {
  format                   = " %status %percentage "
  format_down              = " no battery "
  last_full_capacity       = true
  integer_battery_capacity = true
  status_chr               = "chr"
  status_bat               = "bat"
  status_unk               = "unk"
  status_full              = "full"
  low_threshold            = 15
  threshold_type           = time
}
{% else %}
ethernet _first_ {
  format_up   = " lan %ip "
  format_down = " no lan "
}
{% endif %}

tztime local {
  format = " %h-%d %H:%M "
}
